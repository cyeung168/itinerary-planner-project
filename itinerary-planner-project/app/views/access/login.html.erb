<h1>Login</h1>

  <%= form_tag(login_path) do %>
<p>
  <%= label_tag(:user_name)%>
  <%= text_field_tag(:user_name, params[:user_name], autofocus: true)%>
</p>
<p>
  <%= label_tag(:password)%>
  <%= password_field_tag(:password)%>
</p>
<p>
  <%= submit_tag("Log in", class: "btn btn-primary") %>
</p>
<% end %>

<%= link_to "Don't have an account? Sign up here", signup_path%>